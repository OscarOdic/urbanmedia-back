# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.HomeController.index

GET     /user                       controllers.UserController.index(username: String)
POST    /user/new                   controllers.UserController.create
POST    /user/login                 controllers.UserController.check

GET     /geoloc                     controllers.GeoLocController.index(northeast: String, southwest: String)

GET     /place                      controllers.PlaceController.index(placeid: Int)
GET     /place/random               controllers.PlaceController.randomBackgroundImage(placeid: Int)
POST    /place/add                  controllers.PlaceController.add
POST    /place/follow               controllers.PlaceController.followPlace
POST    /place/unfollow             controllers.PlaceController.unfollowPlace

GET     /place/image                controllers.MediaController.getImage(placeid: Int, imageid: Int)
DELETE  /place/image                controllers.MediaController.deleteImage(imageid: Int)
GET     /place/images               controllers.MediaController.getImages(placeid: Int)
GET     /place/song                 controllers.MediaController.getSong(placeid: Int, songid: Int)
DELETE  /place/song                 controllers.MediaController.deleteSong(songid: Int)
GET     /place/songs                controllers.MediaController.getSongs(placeid: Int)
GET     /place/video                controllers.MediaController.getVideo(placeid: Int, videoid: Int)
DELETE  /place/video                controllers.MediaController.deleteVideo(videoid: Int)
GET     /place/videos               controllers.MediaController.getVideos(placeid: Int)
POST    /place/image/upload         controllers.MediaController.uploadImage(placeid: Int)
POST    /place/song/upload          controllers.MediaController.uploadSong(placeid: Int)
POST    /place/video/upload         controllers.MediaController.uploadVideo(placeid: Int)

POST    /place/comment/add          controllers.ReactionController.addComment
DELETE  /place/comment              controllers.ReactionController.deleteComment(commentid: Int)
POST    /place/warning/add          controllers.ReactionController.addWarning
DELETE  /place/warning              controllers.ReactionController.deleteWarning(warningid: Int)